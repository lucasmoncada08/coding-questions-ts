{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false,
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "types": ["node"]
}
